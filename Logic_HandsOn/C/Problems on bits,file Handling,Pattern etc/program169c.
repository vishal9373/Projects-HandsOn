///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//
//	Program4:
//		 A recursive program which accept number from user and return its factorial
//		 
//
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////


#include<stdio.h>

int Factorial(int iNum)
{
	static int iFact = 1;
	if(iNum!=0)
	{
		iFact = iFact*iNum;
		iNum--;
		Factorial(iNum);
	}

	return iFact;
}

int main()
{
	int iRet = 0,iVal=0;
	char arr[20];

	printf("Enter number:");
	scanf("%d",&iVal);
	iRet = Factorial(iVal);

	printf("Factorial is: %d\n",iRet);
}


/////////////////////////////////////////////////////////////////////////////////////////////////////////
//
//	OUTPUT:
//		Enter number:5
//		Factorial is: 120
//
////////////////////////////////////////////////////////////////////////////////////////////////////////
